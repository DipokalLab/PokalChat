  <script src="/socket.io/socket.io.js"></script>
  <script>

function random() {
    var ranNum = Math.floor(Math.random()*(99999-11111+1)) + 11111;
    return ranNum;
}


function cnick() {
    var nick = $('#nick').val();
    name = nick;
    $('#name').text(name);
    $('#info').text("저장됨");

}
function dinfo() {
  $('#info').text("");

}

var name = "G"+random();
$('#name').text(name);

    $(() => {
      const socket = io();
      $('form').submit(() => {
        socket.emit('chat', $('#m').val(), name);
        $('#m').val('');
        return false;
      });
      socket.on('chat', (msg, name) => {
        $('#messages').append($("<div class='en'>").text(msg));
        $("#messages").scrollTop($("#messages")[0].scrollHeight);

      });
      socket.on('count', (c) => {
        $('#c').text(c+"명 접속중");
      });
    });
  </script>

